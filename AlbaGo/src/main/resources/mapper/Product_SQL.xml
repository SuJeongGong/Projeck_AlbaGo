<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.ex.dao.ProductDAO">
	
	<select id = "selectList" resultType="Product">
		SELECT * FROM product
	</select>
	
		<insert id="insertProduct_term" parameterType="product">
		INSERT INTO product 
		VALUES 
   		(NULL,
   		#{name},
   		#{term},
   		#{price},
   		#{product_explan},
   		#{amount}
   		)
	</insert>
	
	<insert id="insertProduct_no_term" parameterType="product">
		INSERT INTO product 
		(product_id,
		name,
		price,
		product_explan,
		amount)
		VALUES 
   		(NULL,
   		#{name},
   		#{price},
   		#{product_explan},
   		#{amount}
   		)
	</insert>
</mapper>
